---
import Layout from "../../components/Layout.astro";
import imagen1 from '../../img/weddingDress.jpg';

const posts = await Astro.glob('./posts/*.md')


---

<Layout pageTitle="Blog de desarrollo" pageDescription="Tutoriales de desarrollo">

    <h1>Blog 3</h1>
    <img width="500" src={imagen1} alt="">

    {
        posts.map(post => {
            return <a href={post.url} class="link">{post.frontmatter.title}</a>
        })
    }

    <style>
        .link{
            background: white;
            color: black;
            text-decoration: none;
            display: block;
            margin-bottom: 4px;
        }
    
    </style>

</Layout>
