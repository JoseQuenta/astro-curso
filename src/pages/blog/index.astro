---
import Layout from "../../components/Layout.astro";

const posts = await Astro.glob('./posts/*.md')
console.log();

---

<Layout pageTitle="Blog de desarrollo" pageDescription="Tutoriales de desarrollo">

    <h1>
        blog
    </h1>

    {
        posts.map(post => {
            return <a href={post.url} class="link">{post.frontmatter.title}</a>
        })
    }

    <style>
        .link{
            background: white;
            color: black;
            text-decoration: none;
            display: block;
            margin-bottom: 4px;
        }
    
    </style>

</Layout>
