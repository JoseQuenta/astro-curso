const title = 'Mi proyecto en Astro!!!!'
const color = 'danger'

const hobbies = ['programa','leer', 'escribir', 'ver peliculas']

const isActive = false
---

<h1 class="title">{hobbies[0]}</h1>
<h1 class="title">{hobbies[1]}</h1>
<h1 class="title">{hobbies[2]}</h1>

<ul>
{
	hobbies.map(hobby => <li>
	<h3>{hobby}</h3>
	<button>Like</button>
	</li>)
}
</ul>

<h3 class="danger">{isActive ? "El usuario esta activo" :""}</h3>

<style>
	body{
		background: #202020;
		color: white;
	}

	.title{
		color: skyblue;
	}

	.danger{
		color: red;
	}

	.warning{
		color: yellow;
	}
</style>

